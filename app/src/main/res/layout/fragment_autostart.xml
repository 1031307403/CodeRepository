<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/allow_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:background="#f0f0f2" />

        <org.code.view.MatchListView
            android:id="@+id/list_allow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"></org.code.view.MatchListView>

        <TextView
            android:id="@+id/disallow_text"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="25dp"
            android:background="#f0f0f2"/>
        <org.code.view.MatchListView
            android:id="@+id/list_disallow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"></org.code.view.MatchListView>

    </LinearLayout>

</ScrollView>